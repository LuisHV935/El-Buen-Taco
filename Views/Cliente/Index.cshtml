@model IEnumerable<El_Buen_Taco.Models.Pedidos>

@{
    ViewData["Title"] = "Mis pedidos";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">📋 Mis pedidos</h2>
        <h3 class="mb-0">Bienvenido </h3>
        <a class="btn btn-outline-primary" asp-controller="Cliente" asp-action="HacerPedido">Nuevo pedido</a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No hay pedidos para mostrar.</div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Alimentos</th>
                        <th>Hora entrega</th>
                        <th>Método pago</th>
                        <th>Tipo</th>
                        <th>Fecha pedido</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Idpedido</td>
                            <td style="max-width:360px; white-space:normal;">@item.alimentos</td>
                            <td>@(item.horadeentrega.ToString(@"hh\:mm"))</td>
                            <td>@item.metododePago</td>
                            <td>@item.tipo</td>
                            <td>@(item.Fecha_pedido == default ? "-" : item.Fecha_pedido.Date.ToString("g"))</td>
                            <td class="text-end align-middle">
                                <a class="btn btn-sm btn-outline-danger" asp-controller="Cliente" asp-action="DeletePedido" asp-route-id="@item.Idpedido">Eliminar</a>
                                <a class="btn btn-sm btn-primary" asp-controller="Cliente" asp-action="DetallesPedido" asp-route-id="@item.Idpedido">Detalles</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>