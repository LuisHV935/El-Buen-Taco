@model El_Buen_Taco.Models.Pedidos

@{
    ViewData["Title"] = "Editar pedido";
}

<div class="container py-4">
    @if (ViewData["Confirmacion"] != null)
    {
        <div class="alert alert-success">@ViewData["Confirmacion"]</div>
    }
    <div class="row justify-content-center">
        <div class="col-12 col-md-9 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">✏️ Editar pedido #@Model.Idpedido</h5>
                    <a class="btn btn-sm btn-outline-secondary" asp-controller="Cliente" asp-action="DetallesPedido" asp-route-id="@Model.Idpedido">Cancelar</a>
                </div>

                <div class="card-body">
                    <form asp-controller="Cliente" asp-action="EditarPedido" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input asp-for="Idpedido" type="hidden" />
                        <input asp-for="Idcliente" type="hidden" />

                        <div class="mb-3">
                            <label asp-for="alimentos" class="form-label">Alimentos</label>
                            <textarea asp-for="alimentos" class="form-control" rows="5" placeholder="Lista de alimentos, cantidades y observaciones">@Model.alimentos</textarea>
                            <span asp-validation-for="alimentos" class="text-danger small"></span>
                        </div>

                        <div class="row gx-2">
                            <div class="col-md-6 mb-3">
                                <label asp-for="horadeentrega" class="form-label">Hora de entrega</label>
                                <input asp-for="horadeentrega" type="time" class="form-control" />
                                <span asp-validation-for="horadeentrega" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="metododePago" class="form-label">Método de pago</label>
                                <select asp-for="metododePago" class="form-select">
                                    <option value="">Selecciona...</option>
                                    <option value="EFECTIVO" selected="@(Model.metododePago == "EFECTIVO")">Efectivo</option>
                                    <option value="TARJETA" selected="@(Model.metododePago == "TARJETA")">Tarjeta</option>
                                    <option value="TRANSFERENCIA" selected="@(Model.metododePago == "TRANSFERENCIA")">Transferencia</option>
                                </select>
                                <span asp-validation-for="metododePago" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="tipo" class="form-label">Tipo de pedido</label>
                            <select asp-for="tipo" class="form-select">
                                <option value="">Selecciona...</option>
                                <option value="A DOMICILIO" selected="@(Model.tipo == "A DOMICILIO")">Domicilio</option>
                                <option value="EN LOCAL" selected="@(Model.tipo == "EN LOCAL")">Recoger</option>
                            </select>
                            <span asp-validation-for="tipo" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a class="btn btn-outline-secondary" asp-controller="Cliente" asp-action="DetallesPedido" asp-route-id="@Model.Idpedido">Volver</a>
                            <button type="submit" class="btn btn-primary">Guardar cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>