@model IEnumerable<El_Buen_Taco.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">👥 Clientes</h2>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No hay clientes para mostrar.</div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Teléfono</th>
                        <th>Tipo</th>
                        <th>Usuario (FK)</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.Id_cliente</td>
                            <td>@c.Name</td>
                            <td>@c.tel</td>
                            <td>@c.tipo</td>
                            <td>@c.id_user</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-danger" asp-controller="Administrador" asp-action="Delete" asp-route-id="@c.Id_cliente">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>